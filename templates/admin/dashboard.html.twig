{% extends '@EasyAdmin/page/content.html.twig' %}

{% block page_title %}Dashboard - Tatanimo{% endblock %}
{% block content_title %}Dashboard{% endblock %}
{% block head_stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('app') }}
    {{ encore_entry_script_tags('app') }}
{% endblock %}

{% block main %}
    <section class="text-gray-600 body-font">
        <div class="container px-5 py-12 mx-auto">
            <div class="flex flex-col text-center w-full mb-20">
                <h1 class="sm:text-3xl text-2xl font-medium title-font mb-4 text-gray-900">Statistiques</h1>
                <div class="flex flex-wrap -m-4 text-center">
                    <div class="p-4 md:w-1/4 sm:w-1/2 w-full" {{ react_component('stats/StatCard', {"controller":"google_analytics","endpoint": "users"}) }}></div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}