<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{% endblock %} - Tatanimo</title>
        <link rel="icon"
              href="{{ asset('svg/logo.svg') }}">
        <link rel="preconnect"
              href="https://fonts.googleapis.com">
        <link rel="preconnect"
              href="https://fonts.gstatic.com"
              crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap"
              rel="stylesheet">
        <!-- Google tag (gtag.js) -->
        <script async
                src="https://www.googletagmanager.com/gtag/js?id=G-PNNQSVC804"></script>
        <script>
            window.dataLayer = window.dataLayer || [];

            function gtag() {
                dataLayer.push(arguments);
            }

            gtag("js", new Date());

            gtag("config", "G-PNNQSVC804");
        </script>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body class="font-serif">
        {# Alerte #}
        <header {{ react_component('navigation/NavigationBar') }}></header>
        <div class="fixed top-0 left-0 z-50">
            {% for type, flash in app.flashes %}
                <div {{ react_component('alerts/Alerts', {'type': type, 'flash': flash }) }}></div>
            {% endfor %}
        </div>

        {% block body %}{% endblock %}
    </body>
</html>

